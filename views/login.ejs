<html>
    <head>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="stylesheet" href="/css/loginForm.css">
        <link href="https://netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet" />
        <link href="https://fonts.googleapis.com/css?family=Abel|Open+Sans:400,600" rel="stylesheet" />
        <link rel="icon" href="/images/favicon.jpg" type="image/x-icon"/>
        <script src="/js/jquery-3.3.1.js"></script>
        <script src="/js/bootstrap.min.js"></script>
    </head>
    <body>
        
        <div class="container" id="nonNavbar">
            <div class="panel panel-default col-md-4 col-md-offset-4">
                <h1 align="center" class="margin-base-vertical">Login</h1>
                
                <!--form starts-->
                <form  class="margin-base-vertical" method="post" action="/authenticate">                    
                    
                    <p class="input-group">
                        <span class="input-group-addon"><span class="icon-envelope"></span></span>
                        <input type="email" required class="form-control input-lg" name="email" placeholder="email">
                    </p>

                    <p class="input-group">
                        <span class="input-group-addon"><span class="icon-key"></span></span>
                        <input type="password" required class="form-control input-lg" name="password" placeholder="password">
                    </p>

                    <p class="text-center">
                        <button class="btn btn-success btn-lg">Login</button>
                    </p>
                </form>
                <div class="margin-base-vertical">
                    <h5 align="center"> Not Registered yet? <a href="/signup">Register</a></h5>
                </div>
                <div align="center">
                    <a href="/">Go to Home page</a>
                </div>
                <!--form ends-->
            </div>
        </div>
    </body>
</html>